            <Font size="18.0" />
         </font>
      </TextField>
      <TextField fx:id="serverAddressField" layoutX="254.0" layoutY="313.0" prefHeight="42.0" prefWidth="202.0" promptText="Server IP Address">
         <font>
            <Font size="18.0" />
         </font>
      </TextField>
      <Button fx:id="connectButton" layoutX="312.0" layoutY="515.0" mnemonicParsing="false" onAction="#connectPlayer" prefHeight="42.0" prefWidth="86.0" text="Connect">
